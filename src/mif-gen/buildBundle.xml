<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="org.hl7.fhir.tools" default="buildBundle">
  <property name="version" value="20190414"/>
  <property name="oldMif" value="DEFN=UV=VO=1436-20190320"/>
  <path id="saxon.path">
    <fileset dir="../tools/java/imports">
      <include name="*.jar"/>
    </fileset>
  </path>
  <property name="saxon.classname" value="net.sf.saxon.TransformerFactoryImpl"/>
  <target name="buildBundle">
    <get src="https://oss.sonatype.org/service/local/artifact/maven/redirect?r=snapshots&amp;g=ca.uhn.hapi.fhir&amp;a=org.hl7.fhir.validation.cli&amp;v=LATEST&amp;e=jar" dest="org.hl7.fhir.validator.jar" usetimestamp="true"/>
    <concat destfile="vocabFiles.xml">
      <resources>
        <fileset dir="../../sourceOfTruth" includes="**/*.xml"/>
      </resources>
      <header filtering="no">&lt;?xml version="1.0" encoding="UTF-8"?&gt;&lt;files&gt;</header>
      <filterchain>
        <tokenfilter>
          <replacestring from="&lt;?xml version=&quot;1.0&quot; encoding=&quot;UTF-8&quot;?&gt;" to=""/>
        </tokenfilter>
      </filterchain>
      <footer filtering="no">&lt;/files&gt;</footer>
    </concat>
    <xslt in="vocabFiles.xml" out="vocabBundle.xml" style="filesToBundle.xslt" classpathref="saxon.path">
      <factory name="${saxon.classname}"/>
    </xslt>
    <xslt in="vocabBundle.xml" out="DEFN=UV=VO=${version}.coremif" style="VocabBundleToMIF.xslt" classpathref="saxon.path">
      <factory name="${saxon.classname}"/>
      <param name="version" expression="${version}"/>
    </xslt>
    <xslt in="${oldMif}.coremif" out="normalizedMif.xml" style="normalizeOriginalMIF.xslt" classpathref="saxon.path">
      <factory name="${saxon.classname}"/>
    </xslt>
    <xslt in="DEFN=UV=VO=${version}.coremif" out="normalizedNewMif.xml" style="normalizeOriginalMIF.xslt" classpathref="saxon.path">
      <factory name="${saxon.classname}"/>
    </xslt>
    <java jar="org.hl7.fhir.validator.jar" fork="true">
      <arg line="vocabBundle.xml -version 4.0.0 -output validation.txt"/>
    </java>
  </target>
